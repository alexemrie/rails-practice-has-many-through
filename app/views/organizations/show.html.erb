<div class="page-header">
  <h1>Showing Organization <%= @organization.name %></h1>
</div>

<h2>People</h2>

<div class="well">
  <table>
    <thead>
      <tr>
        <th>
          Name
        </th>
      </tr>
    </thead>
    <tbody>
      <td>
        <ul>
          <% @organization.people.each do |person| %>
              <li><%= person.name %></li>
          <% end %>
        </ul>
      </td>

      <!-- Replace me with a list of person names that this organization
      is connected to, via employments. -->
    </tbody>
  </table>
</div>
