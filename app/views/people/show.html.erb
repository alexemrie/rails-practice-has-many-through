<div class="page-header">
  <h1>Showing Person <%= @person.name %></h1>
</div>

<h2>Organizations</h2>

<div class="well">
  <table>
    <thead>
      <tr>
        <th>
          Name
        </th>
      </tr>
    </thead>
    <tbody>
      <td>
        <ul>
          <% @person.organizations.each do |organization| %>
            <li><%= organization.name  %></li>
          <% end %>
        </ul>
      </td>
      <!-- Replace me with a list of organization names that this person is connected to,
      via employments. -->
    </tbody>
  </table>
</div>
